/* components/item-module/item-module.wxss */
.content{
  width: 94%;
  height: 296rpx;
  margin:24rpx 3% 0 3%;
  border: 2rpx solid rgba(204,204,204, 0.5);
  border-radius: 20rpx;
  background-color: white;
}
/* header部分 */
.header{
  font-size: 26rpx;
  padding:20rpx 30rpx;
  display: flex;
  justify-content: space-between;
  color: rgb(44, 44, 44);
}
/* line */
.line{
  width: 90%;
  margin: 0 auto;
  height: 2rpx;
  background-color: #ccc;
}
/* main */
.main{
  padding: 20rpx 30rpx;
  font-size: 26rpx;
}
.name{
    float: left;
}
/* btn */
.mark{
    width:120rpx;
    height: 44rpx;
    text-align: center;
    line-height: 44rpx;
    border-radius:30rpx;
    color: white;
    float: right;
}
/* 按钮颜色设置 */
.warn{
    background-color:#f5324d;
}
.primary{
    background-color: #78ce68;
}
/* 地点设置 */
.clear::after{
    content: '';
    display: block;
    height: 0;
    clear: both;
    visibility: hidden;
}
.address,.time{
    width: 100%;
    height: 40rpx;
    display: flex;
    margin-top: 20rpx;
}
.address-icon,.time-icon{
    width: 30rpx;
    height: 30rpx;
    margin-right: 20rpx;
}
image{
    width: 100%;
    height: 100%;
}
/* 时间 */
.time-year{
    margin-right: 20rpx;
}