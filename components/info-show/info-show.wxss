.info-show{
    width: 90%;
    height: 120rpx;
    display: flex;
    align-items: center;
    margin:30rpx auto;
    border:4rpx solid #707070;
    border-radius: 10rpx;
    background-color: #f7f7f7;
    color: #A4A4A4;
}
/* left部分 */
.info-show-left{
    flex: 4;
    font-size:24rpx;
    padding-left: 10rpx;
}
.info-show-left-title{
    color: black;
    font-size: 32rpx;
    margin-bottom: 10rpx;
    margin-left: 10rpx;
}
.info-show-left-other{
    width: 530rpx;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
    -o-text-overflow:ellipsis;
}
.info-type{
    display: inline-block;
    color:white;
    padding:4rpx 8rpx;
    border-radius: 10rpx;
    background-color: #1E91EA;
    margin-right:10rpx;
}
/* right部分 */
.info-show-right{
    flex: 1;
}
