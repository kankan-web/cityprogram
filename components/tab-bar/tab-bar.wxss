/* components/tab-bar/tab-bar.wxss */
.content{
    display: flex;
    padding: 20rpx 40rpx;
}
.title{
    flex: 1;
    align-self:center;
    text-align: center;
    position: relative;
    color: #777;
}
.active::before{
    content: '';
    position: absolute;
    bottom: -16rpx;
    left:25%;
    width: 50%;
    border-bottom: 8rpx solid #2cc793;
}