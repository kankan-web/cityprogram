<view class="content">
    <form bindsubmit="loginFormData">
        <view class="person-info">
            <input-item title="投诉人">
                <input class="weui-input" auto-focus value="{{complainName}}" placeholder="请输入" />
            </input-item>
            <view class="line"></view>
            <input-item title="联系电话">
                <input class="weui-input" auto-focus value="{{complainTel}}" placeholder="请输入" />
            </input-item>
        </view>
        <view class="address-type">
            <input-item title="投诉位置">
                <view class="address-detail">
                    <input class="address-input" auto-focus value="{{complainAddress}}" placeholder="上海市杨浦区江浦路549号" />
                    <view class="address-detail-icon">
                        <image src="/assets/image/收货地址2.png"></image>
                    </view>
                </view>
            </input-item>
            <view class="line"></view>
            <input-item title="投诉类型">
                <view class="type-detail">
                    <input class="type-input" auto-focus value="{{complainType}}" placeholder="请选择保修类型" />
                    <view class="address-detail-icon">
                        <image src="/assets/image/右箭头.png"></image>
                    </view>
                </view>
            </input-item>
        </view>
        <view class="description">
            <input-item title="投诉详情">
                <textarea class="desc-input" placeholder="请详细描述故障状况" />
            </input-item>
            <view class="line"></view>
            <input-item title="照片">
                <view class="photo">
                    <image src="/assets/image/add.png"></image>
                </view>
                <view class="warn">
                    *请提供现场远、近清晰的照片各一张（最多9张）
                </view>
                <view class="prompt">
                    支持9张
                </view>
            </input-item>
        </view>
        <button class="btn" form-type="submit">上报</button>
    </form>
</view>