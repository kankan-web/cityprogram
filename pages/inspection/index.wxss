/* 设备情况 */
.radio{
    margin-left: 20rpx;
    margin-right: 8rpx;
}
.radio .wx-radio-input{
    border-radius: 50%;
    width: 30rpx;
    height: 30rpx;
 }
.radioGroup{
    float: left;
