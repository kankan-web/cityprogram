.content{
    width: 100%;
    background-color: #f7f7f7;
    padding: 10rpx 0;
    height: 1180rpx;
}
/* 扫描部分 */
.scan{
    width: 88%;
    padding:18rpx;
    margin: 30rpx auto;
    position: relative;
    border-radius: 10rpx;
    background-color: #2cc793;
    color:white;
    box-shadow: 0 0 10px 0#cccccc;
}
.scan-image{
    width: 40rpx;
    height: 40rpx;
    position: absolute;
    top: 20rpx;
    left: 200rpx;
}
.scan-title{
    margin-left: 260rpx;
}
/* device部分 */
.device-info,.description{
    width:88%;
    margin: 50rpx auto;
    padding: 10rpx;
    color: #333;
    box-shadow: 0 0 10px 0#cccccc;
    border-radius: 16rpx;
    background-color:white;
}
.description{
    margin-top: 50rpx;
}
/* line部分 */
.line{
    width:94%;
    height: 2rpx;
    margin: 0 auto;
    background-color: #f1f1ff;
}
/* photo设置 */

/* warn部分 */
.warn{
    margin-top: 28rpx;
    color: #fc202d;
    font-size: 20rpx;
}
.prompt{
    position: absolute;
    top: 70rpx;
    left: 20rpx;
    font-size: 16rpx;
}
/* btn部分 */
.btn{
    color: white;
    margin-top: 60rpx;
    background-color: #2cc793;
    width: 80%;
    border-radius: 98rpx;
}


/* desc */
.desc-input{
    width:98%;
    background-color: #f2f2f4;
    padding:8rpx;
    font-size: 28rpx;
    position: relative;
}
/* title部分 */
.title{
    float: left;
    margin-right:0rpx;
    font-size: 32rpx;
}
.content-item{
    padding: 20rpx;
    height: 50rpx;
    color: #686868;
    position: relative;
    background-color: #fff;
}
.content-item input{
    width: 65%;
    padding-left: 60rpx;
    margin-left:30rpx;
}
.input{
    float: right;
    width: 75%;
    margin-left:30rpx;
}
/* 获取位置 */
.get-position2{
  float: right;
  padding:4rpx 20rpx;
  color: white;
  border-radius: 10rpx;
  background-color: #2cc793;
}
.get-position1{
  float: right;
  padding:4rpx 20rpx;
  color: white;
  border-radius: 10rpx;
  background-color: #cccccc;
