.title{
    width: 120rpx;
    float: left;
    margin-right:0rpx;
    font-size: 30rpx;
}
/* line */
.line{
    width:94%;
    height: 2rpx;
    margin: 0 auto;
    background-color: #f1f1ff;
}
/* 投诉详情 */
.prompt-img{
    width:300rpx;
    height: 300rpx;
    margin: 0 auto;
}
.detail-title{
    padding:10rpx 20rpx;
}
/* btn */
.btn{
    color: white;
    margin-top: 50rpx;
    margin-bottom: 60rpx;
    background-color: #2cc793;
    width: 80%;
    border-radius: 98rpx;
}