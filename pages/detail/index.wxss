.content{
    width: 100%;
    padding: 10rpx 0;
}
/* device */
.device-info,.complaint-detail,.feedback-detail{
    width:88%;
    margin: 30rpx auto;
    padding: 10rpx 10rpx;
    color: #333;
    box-shadow: 0 0 10px 0#cccccc;
    border-radius: 16rpx;
    background-color:white;
}
.content-item{
    padding: 20rpx;
    color: #686868;
    position: relative;
    background-color: #fff;
}
.content-item input{
    width: 60%;
    padding-left: 50rpx;
    margin-left:30rpx;
}
